@model Expense

<form asp-action="EditExpense" method="post">
    <input type="hidden" asp-for="ExpenseID" />
    <label asp-for="Type"></label>
    <input asp-for="Type" class="form-control" />
    <label asp-for="Amount"></label>
    <input asp-for="Amount" class="form-control" />
    <label asp-for="Date"></label>
    <Select asp-for="Date" class="form-control"><option disabled selected>@Model.Date.ToString("d")</option></Select>
    <label asp-for="Paid"></label>
    <input asp-for="Paid" class="form-check">
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>